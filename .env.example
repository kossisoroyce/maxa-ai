# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# API Settings
API_PREFIX=/api/v1
API_TITLE=Maxa AI API
API_VERSION=0.1.0

# CORS Settings (comma-separated list of origins, or * for all)
CORS_ORIGINS=*

# Qdrant Settings
QDRANT_URL=http://qdrant:6333  # Use 'qdrant' for Docker, 'localhost' for local dev
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=maxa_memories

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Redis Settings
REDIS_HOST=redis  # Use 'redis' for Docker, 'localhost' for local dev
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# Security Settings (change in production!)
SECRET_KEY=change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Rate Limiting
RATE_LIMIT=100  # requests per minute
